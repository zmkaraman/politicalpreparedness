<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceHeadline5">@style/CustomHeadline5</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="textAppearanceHeadline3">@style/CustomTextLtGray</item>
        <item name="textAppearanceHeadline4">@style/CustomTextDarkGray</item>

    </style>

    <style name="CustomHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/default_text_size_14</item>
        <item name="android:textColor">@color/gray70</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomTextDarkGray" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/default_text_size_14</item>
        <item name="android:textColor">@color/gray60</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CustomTextLtGray" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/default_text_size_12</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

</resources>
